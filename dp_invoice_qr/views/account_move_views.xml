<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add QR Code fields to Invoice Form View -->
    <record id="view_move_form_qr" model="ir.ui.view">
        <field name="name">account.move.form.qr</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Add QR section in the invoice form -->
            <xpath expr="//page[@name='other_info']" position="inside">
                <group string="QR Code Settings" name="qr_code_settings">
                    <field name="show_qr_on_invoice"/>
                </group>
            </xpath>
            
            <!-- Show QR preview for posted invoices -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <field name="qr_code_image" widget="image" 
                       invisible="not qr_code_image"
                       class="oe_avatar"
                       options="{'size': [90, 90]}"/>
            </xpath>
        </field>
    </record>
</odoo>
